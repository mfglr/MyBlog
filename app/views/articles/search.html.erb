<div class="container">
    <div class="row">
        <% if @articles.any? %>
            <% @articles.each do |article| %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <%= render article %>
                </div>
            <% end %>
        <% else %>
            <div class="d-flex justify-content-center">
                <h2><%= t("search.no_articles") %></h2>                
            </div>
        <% end %>
    </div>
</div>