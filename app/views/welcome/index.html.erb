<div class="container">
    <div class="row">
        <% if @articles.any? %>
            <div class="offset-lg-4 col-lg-4 offset-md-3 col-md-6">
                <%= render "shared/search_box"%>
            </div>
        <% else %>
            <div class="d-flex justify-content-center mb-4">
                <% if user_signed_in?%>
                    <h1 class="display-6">
                        <%= t("request_to_create_article") %>
                        <%= link_to "Add new article", new_article_path, class: "text-primary" %>
                    </h1>
                <% else %>
                    <h1 class="display-5">Oh No!!! No Articles</h1>
                <% end %>
            </div>
        <% end %>
    </div>
    
    

    <div class="row">
        <% @articles.each do |article| %>
            <div class="col-lg-4 col-md-6 mb-4">
                <%= render article %>
            </div>
        <% end %>
    </div>
</div>
